<MenuScreen>
    Image:
        pos_hint:{'x':.3}
        size_hint:.7,.8
        source:'img\kamien_papier_nozyce.png'
    Image:
        pos_hint:{'x':.32,'y':.8}
        size_hint:.6,.2
        source:"img\menu_napis.png"
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        size_hint:.3,1
        padding:10
        spacing:50
        Button:
            id: play_button
            opacity:0
            background_normal:'img\PlayButton.png'
            background_down:'img\PlayButton1.png'
            size_hint:1,.1
            pos_hint:{'x':0,'y':.25}
            disabled:True
            on_release:
                root.manager.current = 'game'
                root.manager.transition.direction = 'left'
                root.animate_it2(self)
        BoxLayout:
            id: box_imie
            orientation:'vertical'
            pos_hint:{'top':1}
            size_hint:1,.04
            spacing:7
            Label:
                id:name_label
                font_name:'Comic'
                opacity:1
                text:"What's your name:"
                color: 255/255,243/255,140/255
                size_hint:1,.2
            TextInput:
                id:name_input
                focus:True
                multiline:False
                background_color : (1,1,1,1)
                opacity:1
                text: ''
                on_text_validate:
                    root.animate_it(self)
                    root.on_press_submit(self)


            Button:
                id:submit_button
                background_color:0,0,0
                text: 'Submit'
                color: 255/255,243/255,140/255
                font_sisze:self.width/4
                font_name:'Comic'
                pos_hint:{'center_x':.5}
                size_hint:.5,1
                on_release:
                    root.animate_it(self)
                    root.on_press_submit(self)
        Button:
            background_normal:'img\QuitButton.png'
            background_down:'img\QuitButton1.png'
            size_hint:1,.06
            on_release:
                quit()


<GameScreen>
    FloatLayout:
        pos_hint:{'x':.01,'y':.2}
        size_hint:.37,.78
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source:'img\\Scores_board.png'
        Label:
            text:'Scores:'
            font_name:'Comic'
            color:'#EF5B0C'
            font_size:42
            pos_hint:{'x':0,'y':.35}
        Label:
            id:plr_scores
            text:'Player: 0 '
            font_name:'Comic'
            color:'#EF5B0C'
            font_size:22
            size_hint:.5,.2
            pos_hint:{'x':.1,'y':.65}
        Label:
            id:com_scores
            text:'Computer: 0 '
            font_name:'Comic'
            color:'#EF5B0C'
            font_size:22
            size_hint:.5,.2
            pos_hint:{'x':.1,'y':.55}
        Label:
            text:'Wins:'
            font_name:'Comic'
            font_size:42
            pos_hint:{'x':0,'y':0}
            color:'FA7070'
        Label:
            id:plr_win
            text:'Player wins: 0 '
            font_name:'Comic'
            font_size:22
            size_hint:.5,.2
            pos_hint:{'x':.2,'y':.2}
            color:'FA7070'
        Label:
            id:com_win
            text:'Computer wins: 0 '
            font_name:'Comic'
            font_size:22
            size_hint:.5,.2
            pos_hint:{'x':.2,'y':.1}
            color:'FA7070'
    FloatLayout:
        pos_hint:{'x':.39,'y':.23}
        size_hint:.6,.54
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source:'img\\tulipany.jpg'
        Label:
            id: winner_label
            pos_hint:{'x':.04,'y':.35}
            text: 'Good Luck!!!'
            font_name:'Comic'
            color:'3CCF4E'
            font_size:32

    Button:
        background_normal:'img\menu.png'
        background_down:'img\menu1.png'
        size_hint:.2,.15
        on_press:
            root.manager.current = 'menu'
            root.manager.transition.direction = 'right'
        on_release:
            root.menu_button(self)
    Button:
        id: kamien
        text:'kamien'
        pos_hint:{'x':.4,'y':.01}
        background_normal:'img\\kamien.png'
        background_down:'img\\kamien_wybrane.png'
        size_hint:.18,.2
        on_release:
            root.result('kamien')
            root.animate_kamien(self)
            root.comp_move(self)
    Button:
        id: nozyce
        text:'nozyce'
        pos_hint:{'x':.6,'y':.01}
        background_normal:'img\\nozyce1.PNG'
        background_down:'img\\nozyce1_wybrane.png'
        size_hint:.18,.2
        on_release:
            root.result('nozyce')
            root.animate_nozyce(self)
            root.comp_move(self)
    Button:
        id: papier
        text:'papier'
        pos_hint:{'x':.8,'y':.01}
        background_normal:'img\\papier.png'
        background_down:'img\\papier_wybrane.png'
        size_hint:.18,.2
        on_release:
            root.result('papier')
            root.animate_papier(self)
            root.comp_move(self)
    Image:
        #Nozyce
        source:'img\\nozyce2.png'
        id:com_label1
        size_hint:.2,.20
        pos_hint:{'x':.8,'y':.79}
    Image:
        #Papier
        source:'img\papier_c.png'
        id:com_label2
        size_hint:.2,.2
        pos_hint:{'x':.6,'y':.79}
    Image:
        #Kamien
        source:'img\kamien_c.png'
        id:com_label3
        size_hint:.2,.2
        pos_hint:{'x':.4,'y':.79}
    